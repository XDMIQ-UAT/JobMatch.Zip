{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm ci --ignore-scripts || npm install --ignore-scripts --legacy-peer-deps",
  "framework": null,
  "rewrites": [
    {
      "source": "/((?!api|_next|.*\\..*).*)",
      "destination": "/frontend/dist/$1"
    }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "includeFiles": "backend/dist/**",
      "memory": 1024,
      "maxDuration": 30
    },
    "api/test.js": {
      "runtime": "nodejs20.x",
      "memory": 512,
      "maxDuration": 10
    }
  }
}
