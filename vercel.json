{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm ci --ignore-scripts || npm install --ignore-scripts --legacy-peer-deps",
  "framework": null,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/api/test.js"
    },
    {
      "src": "/api/voice/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/((?!api).*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}
