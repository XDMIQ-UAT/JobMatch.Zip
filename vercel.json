{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm ci --ignore-scripts || npm install --ignore-scripts --legacy-peer-deps",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/frontend/dist/$1"
    }
  ]
}
